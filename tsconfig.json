{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["client/*"]
    },
    "skipLibCheck": true,
    "strict": false,
    "ignoreDeprecations": "5.0"
  },
  "include": ["client/**/*", "shared/**/*", "vite.config.ts"],
  "exclude": ["node_modules", "dist"]
}
